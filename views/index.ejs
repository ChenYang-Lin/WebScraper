<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <title>Web Scraper</title>
  </head>  
  <body>
    <div class="event-list-container">
      <% for (let i = 0; i < listOfEvents.length; i++) { %>
      <div class="event-container">
        <h1 class="event-title">
          <a href="<%= listOfEvents[i].linkToOriginalPost %>" class="link-to-original-post" >
            <%= listOfEvents[i].title %>
          </a>
        </h1>
        <div class="event-image">
          <img src="<%= listOfEvents[i].image %>" alt="Image" />
        </div>
        <h3 class="event-date">Date & Time: <%= listOfEvents[i].detailDateTime %></h3>
        <h3 class="organization-name">
          Organization: 
          <% for (let j = 0; j < listOfEvents[i].organizationInfo.length; j++) { %>
            ,
            <a href="<%= listOfEvents[i].organizationInfo[j].link %>" class="organization-link" >
              <%= listOfEvents[i].organizationInfo[j].name %>
            </a>
          <% } %>
        </h3>
        <h3 class="address">Address: <%= listOfEvents[i].address %></h3>
        <div class="description">Description: <%= listOfEvents[i].description %></div>
      </div>
      <hr>
      <br>
      <% } %>
      <button class="filter">filter</button>
    </div>

    
    <!-- Scripts -->
    <%- include ('client.ejs') %>
    <%- include ('filterWeek.ejs') %>

  </body>
</html>
