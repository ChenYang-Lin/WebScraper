<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <title>Web Scraper</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <!-- Bootstrap Icon -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <!-- CSS -->
    <link rel="stylesheet" href="/style.css" type="text/css">
  </head>  
  <body>
    <!-- Nav bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a href="/admin" class="navbar-brand">Event Seeker</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a href="#" class="nav-link">Contact Us</a>
            </li>
            <li class="nav-item">
              <a href="#" class="nav-link">Request Event</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <% if(listOfEvents.length === 0) { %>
      <h1>no events, try again later</h1>
    <% } %>


    <!-- Event Container -->
    <div class="container bg-white shadow p-3 rounded my-3">
      <div class="row justify-content-center">
        <% for (let i = 0; i < listOfEvents.length; i++) { %>
          <div class="container">
            <div class="row align-items-center">
              <!-- Img -->
              <div class="col-4">
                <img class="img-fluid w-100 rounded" src="<%= listOfEvents[i].image %>" alt="Image" />
              </div>
              <!-- Content -->
              <div class="col-8">
                <!-- Time -->
                <h4 class="text-danger"><%= listOfEvents[i].detailDateTime %></h4>
                <!-- Title -->
                <h3 class="fw-bold">
                  <a href="<%= listOfEvents[i].linkToOriginalPost %>" class="link-to-original-post" >
                    <%= listOfEvents[i].title %>
                  </a>
                </h3>
                <!-- Location -->
                <h4><%= listOfEvents[i].address %></h4>
                <div class="d-none d-lg-block">
                  <!-- Organization -->
                  <h5 class="organization-name">
                    Organization: 
                    <% for (let j = 0; j < listOfEvents[i].organizationInfo.length; j++) { %>
                      <a href="<%= listOfEvents[i].organizationInfo[j].link %>" class="organization-link" >
                        <%= listOfEvents[i].organizationInfo[j].name %>
                      </a>
                      ,
                    <% } %>
                  </h5>
                  <!-- Description -->
                  <p>Description: <%= listOfEvents[i].description %></p>
                </div>
              </div>
            </div>
          </div>
          <hr>
          <br>
        <% } %>
      </div>
    </div>


    <!-- Footer -->
    <!-- <button class="filter" onclick="filterCurrentWeek(listOfEvents, 0)">filter this week</button>
    <button class="filter" onclick="filterCurrentWeek(listOfEvents, 1)">filter next week</button>
    <button class="filter" onclick="filterCurrentWeek(listOfEvents, 2)">filter 2 week</button>
    <button class="filter" onclick="filterCurrentWeek(listOfEvents, 3)">filter 3 week</button>
    <button class="filter" onclick="filterCurrentWeek(listOfEvents, 4)">filter 4 week</button> -->


    <!-- Bootstrap script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>

    <!-- Scripts -->
    <%- include ('scripts/client.ejs') %>
    <%- include ('scripts/filterWeek.ejs') %>
    <%- include ('scripts/render.ejs') %>

  </body>
</html>
